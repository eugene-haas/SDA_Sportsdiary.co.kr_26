    function tabList () {
      var $tabIpt = $('.list-group .act_btn input');
      $tabIpt.on('click', function(){
        if ($(this).is(':checked')) {
          $tabIpt.parents('.act_btn').removeClass('on');
          $(this).parents('.act_btn').addClass('on');
        } else {
          $(this).parents('.act_btn').removeClass('on');
        }
